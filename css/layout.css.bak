/* include mobile friendly */
/* include layout - float right, footer, nav */
html{
    height:auto;
    min-height: 100%;
}
body {
    font-family: sans-serif;
    margin: 0;
    height: auto;
    min-height: 100%;
}

#wrap-centered {
    width: 100%;
    margin: 0 auto;
}

nav {
    width: 100%;
    overflow: auto;
    background-color: rgba(1, 1, 1, 0.3);
    /* margin-bottom: 3px; */
}

nav ul,
nav .navbar {
    display: block;
    /* float: left; */
    /* margin: 15px; */
    list-style-type: none;

    padding: 0 5px;
    /* float: right; */

}

nav li, nav li:last-child{
    display: inline;
    /* margin: 15px 15px; */
    /* padding: 0px 5px; */
}

nav li a {
    padding: 15px 15px;
    text-decoration: unset;
    color: green;
}

nav li a:hover {
    text-decoration: unset;
    color: lime;
    background-color: rgba(1, 1, 1, 0.4);
    transition: 0.2s;
}

nav #logo {
    /* margin-left: 3px; */
    float: left;
    width: auto;
}

nav #logo img {

    display: inline-block;
    max-height: 3em;
    /* width: auto; */
}

nav::after {
    clear: both;
}

nav #menu_small {
    display: none;
    cursor: pointer;
}
nav button {
    float: right;
    transform: translate(-5px,-20%);
}
@media only screen and (max-width:768px) {
    nav #logo {
        display: none;
    }

    nav #menu_small {
        display: block;

    }

    nav ul li {
        display: block;
        padding: 15px;
        padding-right: 5px;
        margin: 0 auto;

    }

    nav .navbar {
        padding: 0;
        display: none;
    }

    nav .mob {
        padding: 0;
        display: block;
    }

    nav .mob {
        padding: 0;
        display: block;
    }

    nav .mob li {
        padding: 0;
    }

    nav .mob a {
        float: none;
        display: block;
        padding: 15px;
    }
}

footer {
    bottom: 0;
    position: relative;
    padding: 9px;
    background: black;
    color: white;
}

footer a {
    color: white;
    text-decoration: none;
    font-size: 0.9em;
}